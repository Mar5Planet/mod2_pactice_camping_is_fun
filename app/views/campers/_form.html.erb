<%if flash[:my_errors] %>
    <% flash[:my_errors].each do |error| %>
        <p> <%= error %> </p>
    <% end %>
 <% end %>

<%= form_for @camper do |f| %>
    <p><%= f.label :name %></p>
    <p><%= f.text_field :name %></p>

    <p><%= f.label :age %></p>
    <p><%= f.text_field :age %></p>

    <%= f.submit %>
<% end %>